@using eLibrary.Models.Entities;

@model IEnumerable<Book>

@{
    ViewData["Title"] = "Home Page";
}

<section>
    <div>
        <div>
            <h4>Available Books</h4>
        </div>
        <div class="container d-flex flex-row flex-wrap">
            @foreach (var book in Model)
            {
                <div class="col-3 rounded-2 d-flex flex-column" style="height: 80px; border: 1px solid grey">
                    <div class="w-100 " style="height: 300px; background-image: url('https://upload.wikimedia.org/wikipedia/en/5/55/The_Tin_Man_%28novel%29.jpg');">
                    </div>
                    <h6> <strong>@book.Title</strong></h6>
                    <span>@book.Genre.Name</span>
                    @if (book.AvailableCopies > 0 )
                    {
                        <span class="badge bg-success col-3">Available</span>
                    }
                    else
                    {
                        <span class="badge bg-danger small">Not available</span>
                    }
                </div>
            }
        </div>
    </div>
</section>
