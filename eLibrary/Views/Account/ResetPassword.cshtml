@model ResetPasswordViewModel

<section class="d-flex flex-row w-100 justify-content-center align-items-center" style="position: absolute; top: 0; height: 100%;">
    <div class="col-md-6 h-75 p-5 rounded-3 d-flex flex-column align-items-center">
        <div class="row mb-5">
            <h3>Recover Password</h3>
        </div>
        @if (ViewData["reset"] != null)
        {
            <div class="container-fluid">
                <div class="col-md-8 w-100 justify-content-center">
                    <p>Your password has been reset successfully.</p>
                    <div id="CountDown">
                        You will be redirected after
                        <span id="CountDownLabel"></span> seconds.
                    </div>
                </div>
            </div>
            
        }
        else
        {
            <div class="col-12">
                <div asp-validation-summary="ModelOnly"></div>
                <form method="post" asp-controller="Account" asp-action="ResetPassword">
                    <div class="mb-4">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input type="text" asp-for="Email" class="form-control" hidden/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-4">
                        <label asp-for="Password" class="form-label">New Password</label>
                        <input type="text" asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                        <input type="text" asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="Token" class="form-control" />

                    <div class="d-flex flex-column justify-content-center pb-3">
                        <button type="submit" class="btn btn-light mb-2">Submit</button>
                    </div>

                    
                    @Html.AntiForgeryToken()
                </form>
            </div>
        }
    </div>
</section>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}