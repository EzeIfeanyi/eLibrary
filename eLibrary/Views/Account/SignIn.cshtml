@model SignInViewModel

<section class="d-flex flex-row w-100 justify-content-center align-items-center" style="position: absolute; top: 0; height: 100%;">
    <div class="col-md-6 h-75 p-5 rounded-3 d-flex flex-column justify-content-evenly align-items-center" style="border: 1px solid grey;">
        <div class="row">
            <h3>SIGNIN</h3>
        </div>
        <div class="col-12">
            <div asp-validation-summary="ModelOnly"></div>
            <form method="post" asp-controller="Account" asp-action="SignIn">
                <div class="mb-4">
                    <label asp-for="UserName" class="form-label">Username</label>
                    <input type="text" asp-for="UserName" class="form-control"/>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label" >Password</label>
                    <input type="password" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-flex flex-row mb-5">
                    <a class="col text-decoration-none" href="#">Forgot Password?</a>
                    <div class="col" >
                        <span class="small">Don't have an Account? </span>
                        <a class="text-decoration-none" asp-controller="Account" asp-action="SignUp">SignUp</a>
                    </div>
                </div>

                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-light">Submit</button>
                </div>
                @Html.AntiForgeryToken()
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}