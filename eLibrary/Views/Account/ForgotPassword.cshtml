@model ForgotPasswordViewModel

<section class="d-flex flex-row w-100 justify-content-center align-items-center" style="position: absolute; top: 0; height: 100%;">
    <div class="col-md-6 h-75 p-5 rounded-3 d-flex flex-column align-items-center">
        <div class="row mb-5">
            <h3>Recover Password</h3>
        </div>
        @if (ViewData["isSent"] != null)
        {
            <div class="container-fluid">
                <div class="col-md-8 w-100 justify-content-center">
                    <p>The password reset link has been successfully sent to your email.</p>
                    <a asp-action="Login" asp-controller="Account" class="text-decoration-none text-primary">Here</a>
                </div>
            </div>
            
        }
        else
        {
            <div class="col-12">
                <div asp-validation-summary="ModelOnly"></div>
                <form method="post" asp-controller="Account" asp-action="ForgotPassword">
                    <div class="mb-4">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input type="text" asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="d-flex flex-column justify-content-center pb-3">
                        <button type="submit" class="btn btn-light mb-2">Submit</button>
                    </div>
                    @Html.AntiForgeryToken()
                </form>
            </div>
        }
    </div>
</section>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}